// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produtos {
  id            Int      @id @default(autoincrement())
  nome          String
  valorUnitario Decimal  @map("valor_unitario")
  Vendas        Vendas[]

  @@map("produtos")
}

model Clientes {
  id     Int      @id @default(autoincrement())
  nome   String
  Vendas Vendas[]

  @@map("clientes")
}

model Vendas {
  id         Int      @id @default(autoincrement())
  produtosId Int      @map("produtos_id")
  clienteId  Int      @map("cliente_id")
  quantidade Int      @map("quantidade")
  dataVenda  DateTime @map("data_venda")

  produtos Produtos @relation(references: [id], fields: [produtosId])
  cliente  Clientes @relation(references: [id], fields: [clienteId])

  @@map("vendas")
}

model ArquivoHistorico {
  id              Int      @id @default(autoincrement())
  nomeArquivo     String   @unique // Ex: vendas_29-09-2025.dat
  dataProcessamento DateTime @default(now())
  dataVenda       DateTime // Data extraída do nome do arquivo (para ordenação)
}