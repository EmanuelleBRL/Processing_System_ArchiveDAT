generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Produtos {
  id Int @id 
  nome String
  valorUnitario Decimal @map("valor_unitario")

  @@map("produtos")
  Vendas Vendas[]
}

model Clientes {
  id Int @id @default(autoincrement())
  nome String

  @@map("clientes")
  Vendas Vendas[]
}

model Vendas {
  id Int @id @default(autoincrement())
  produtosId Int @map("produtos_id")
  clienteId Int @map("clinte_id")
  quantidade Int @map("quantidade")
  dataVenda DateTime @map("data_venda ")

  
  produtos Produtos @relation(references: [id], fields: [produtosId])
  cliente Clientes @relation(references: [id], fields: [clienteId])
}