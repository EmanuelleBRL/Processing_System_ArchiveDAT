{
  "compilerOptions": {
    // Sincronizando target e lib para a mesma vers√£o
    "target": "es2023",
    "lib": [
      "ES2023"
    ],
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // Definindo a base para os caminhos e corrigindo o alias
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}